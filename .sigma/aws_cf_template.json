{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "This template creates the stack for project demoAPI. Generated by Sigma",
  "Parameters": {
    "lambdaCodeBucketParameter": {
      "Type": "String",
      "Description": "Name of the S3 bucket containing the Lambda deployment package"
    },
    "lambdaCodeKeyParameter": {
      "Type": "String",
      "Description": "S3 key of the Lambda deployment package"
    }
  },
  "Outputs": {
    "httpApigdemoAPIRouteANY": {
      "Description": "URL of demoAPI/:ANY endpoint",
      "Value": {
        "Fn::Join": [
          "",
          [
            "https://",
            {
              "Ref": "httpApigdemoAPI"
            },
            ".execute-api.",
            {
              "Ref": "AWS::Region"
            },
            ".amazonaws.com",
            "",
            "/"
          ]
        ]
      }
    },
    "demoAPI": {
      "Description": "ARN of Lambda function demoAPI",
      "Value": {
        "Fn::GetAtt": [
          "demoAPI",
          "Arn"
        ]
      }
    }
  },
  "Resources": {
    "httpApigdemoAPI": {
      "Type": "AWS::ApiGatewayV2::Api",
      "Properties": {
        "Description": "An HTTP API generated by Sigma",
        "Name": "demoAPI",
        "ProtocolType": "HTTP",
        "CorsConfiguration": {
          "AllowHeaders": [
            "*"
          ],
          "AllowMethods": [
            "*"
          ],
          "AllowOrigins": [
            "*"
          ],
          "ExposeHeaders": [
            "*"
          ],
          "MaxAge": 300
        }
      }
    },
    "httpApigdemoAPIStage": {
      "Type": "AWS::ApiGatewayV2::Stage",
      "Properties": {
        "ApiId": {
          "Ref": "httpApigdemoAPI"
        },
        "Description": "Stage of API",
        "StageName": "$default",
        "AutoDeploy": true
      }
    },
    "demoAPI": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": "demoAPI",
        "Description": "Invokes functions defined in demoAPI.js in project demoAPI. Generated by Sigma.",
        "Code": {
          "S3Bucket": {
            "Ref": "lambdaCodeBucketParameter"
          },
          "S3Key": {
            "Ref": "lambdaCodeKeyParameter"
          }
        },
        "MemorySize": 128,
        "Handler": "demoAPI.handler",
        "Timeout": 60,
        "Runtime": "nodejs10.x",
        "Layers": [],
        "TracingConfig": {
          "Mode": "PassThrough"
        },
        "Role": {
          "Fn::GetAtt": [
            "demoAPIExecutionRole",
            "Arn"
          ]
        },
        "Environment": {
          "Variables": {
            "SIGMA_AWS_ACC_ID": {
              "Ref": "AWS::AccountId"
            }
          }
        }
      }
    },
    "demoAPIExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ],
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ]
        }
      }
    },
    "httpApigdemoAPIIntegrationdemoAPI": {
      "Type": "AWS::ApiGatewayV2::Integration",
      "Properties": {
        "ApiId": {
          "Ref": "httpApigdemoAPI"
        },
        "Description": "Integration of function: demoAPI to HTTP API: demoAPI",
        "IntegrationType": "AWS_PROXY",
        "PayloadFormatVersion": "2.0",
        "IntegrationUri": {
          "Fn::GetAtt": [
            "demoAPI",
            "Arn"
          ]
        }
      }
    },
    "httpApigdemoAPIRouteANY": {
      "Type": "AWS::ApiGatewayV2::Route",
      "DependsOn": [
        "httpApigdemoAPIIntegrationdemoAPI"
      ],
      "Properties": {
        "ApiId": {
          "Ref": "httpApigdemoAPI"
        },
        "RouteKey": "ANY /",
        "AuthorizationType": "NONE",
        "Target": {
          "Fn::Join": [
            "/",
            [
              "integrations",
              {
                "Ref": "httpApigdemoAPIIntegrationdemoAPI"
              }
            ]
          ]
        }
      }
    },
    "httpApigdemoAPIRouteANYPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:InvokeFunction",
        "FunctionName": {
          "Ref": "demoAPI"
        },
        "SourceArn": {
          "Fn::Sub": [
            "arn:aws:execute-api:${AWS::Region}:${AWS::AccountId}:${__ApiId__}/*/${__Method__}${__Path__}",
            {
              "__Method__": "ANY",
              "__Path__": "/",
              "__ApiId__": {
                "Ref": "httpApigdemoAPI"
              }
            }
          ]
        },
        "Principal": "apigateway.amazonaws.com"
      }
    }
  }
}